{
  "name": "mortenscheel/rusty-php",
  "description": "Rust Option and Result in PHP",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Morten Scheel",
      "email": "morten@mortenscheel.com"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.43",
    "laravel/pint": "^1.16",
    "pestphp/pest": "^2.34",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Scheel\\Rusty\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "analyse": "phpstan analyse",
    "analyze": "@analyse",
    "check": [
      "@lint",
      "@analyse",
      "@test"
    ],
    "lint": "pint --test",
    "lint-fix": "pint",
    "test": "pest"
  }
}
